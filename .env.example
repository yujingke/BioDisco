# BioDisco Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Free API Configuration (Optional - for free API usage)
OPENAI_API_KEY=your_free_api_key_here # get it for free at https://token.llm7.io/ for higher rate limits.
OPENAI_API_BASE=https://api.llm7.io/v1

# Neo4j Database Configuration (Optional - for knowledge graph functionality)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password
KG_PATH=/path/to/your/kg_specific_files

# Lit and KG integration (Optional)#
DISABLE_PUBMED=False
DISABLE_KG=False




